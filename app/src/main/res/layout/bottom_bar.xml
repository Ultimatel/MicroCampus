<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_main_tab_bottom"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_alignParentBottom="true"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp" 
        android:layout_alignParentBottom="true"
   		android:background="@color/white" >

        <LinearLayout
            android:id="@+id/layout_btn_learn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/layout_image_learn"
                android:layout_width="27dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:background="#0000"
                android:clickable="false"
                android:src="@drawable/bottom_bar_learn_normal" />

            <TextView
                android:id="@+id/layout_text_learn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="学习" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_btn_need"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/layout_image_need"
                android:layout_width="27dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:background="#0000"
                android:clickable="false"
                android:src="@drawable/bottom_bar_need_normal" />

            <TextView
                android:id="@+id/layout_text_need"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="我需要" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_btn_activity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/layout_image_activity"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:background="#0000"
                android:clickable="false"
                android:src="@drawable/bottom_bar_activity_normal" />

            <TextView
                android:id="@+id/layout_text_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="活动" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_btn_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" >
			<!--beforeDescendants：viewgroup会优先其子类控件而获取到焦点 -->

            <ImageButton
                android:id="@+id/layout_image_share"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:background="#0000"
                android:clickable="false"
                android:src="@drawable/bottom_bar_share_normal" />

            <TextView
                android:id="@+id/layout_text_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="分享" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_btn_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" >
            <!--beforeDescendants：viewgroup会优先其子类控件而获取到焦点 -->

            <ImageButton
                android:id="@+id/layout_image_me"
                android:layout_width="28dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:background="#0000"
                android:clickable="false"
                android:src="@drawable/bottom_bar_me_normal" />

            <TextView
                android:id="@+id/layout_text_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="我" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>