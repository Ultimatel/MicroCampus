<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/voluntee_score"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:textColor="@color/red"
        android:text="+ 0.2"
        android:textSize="26sp"
        android:layout_margin="6dp"
        android:paddingTop="13dp"
        android:paddingLeft="3dp"
        />
    <ImageView
        android:id="@+id/voluntee_view"
        android:layout_width="5dp"
        android:layout_height="65dp"
        android:layout_margin="6dp"
        android:background="@color/gray"
        android:layout_toRightOf="@+id/voluntee_score"/>
    <TextView
        android:id="@+id/voluntee_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/voluntee_view"
        android:text="title"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        android:singleLine="true"/>
    <TextView
    android:id="@+id/voluntee_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/voluntee_view"
    android:layout_below="@+id/voluntee_title"
    android:text="content"
    android:textSize="13sp"
    android:layout_marginTop="5dp"
    android:ellipsize="end"
    android:lines="2"
    android:layout_marginLeft="5dp" />
</RelativeLayout>

