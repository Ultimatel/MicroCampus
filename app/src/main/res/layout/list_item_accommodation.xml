<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grid_view_background"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/apartment"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/apartment"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="4"
            android:paddingLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/apartment_title"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textSize="16sp"
                android:text="澳威C酒店公寓"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:orientation="horizontal">
                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:isIndicator="true"
                    style="?android:attr/ratingBarStyleSmall"
                    android:numStars="5"
                    android:rating="3.5" />
                <TextView
                    android:id="@+id/apartment_evaluation"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text=" 3.5分"/>
            </LinearLayout>

            <TextView
                android:id="@+id/apartment_price"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:textColor="@color/orange"
                android:textSize="16sp"
                android:text="￥40/每晚"/>
            <TextView
                android:id="@+id/apartment_position"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="bottom"
                android:text="端州区 距离1km"/>
        </LinearLayout>
        <TextView
            android:id="@+id/month_sale"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="月售：177单"/>


    </LinearLayout>

</LinearLayout>
