<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">
    <TextView
        android:id="@+id/textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="7dp"
        android:text="姓名："/>
    <EditText
        android:id="@+id/edtext_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@+id/textview_name"/>
    <TextView
        android:id="@+id/textview_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="学号："

        android:layout_below="@+id/textview_name"
        android:layout_marginTop="21dp"/>
    <EditText
        android:id="@+id/edtext_name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textview_name"
        android:layout_below="@+id/textview_name"
        android:phoneNumber="true"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/textview_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="联系方式："
        android:layout_below="@+id/textview_name1"
        android:layout_marginTop="24dp"/>
    <EditText
        android:id="@+id/edtext_name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textview_name1"
        android:layout_below="@+id/textview_name1"
        android:layout_marginTop="15dp"
        android:hint="电话号码"
        android:textSize="15sp"
        android:inputType="phone"
        android:layout_marginLeft="45dp"/>

</RelativeLayout>
    <EditText
        android:id="@+id/content_form"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:hint="自我介绍"
        android:gravity="center_horizontal"
        />
    <Button
        android:id="@+id/btn_commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交"
        android:layout_gravity="end"
        android:layout_marginBottom="0dp"
        />
</LinearLayout>
