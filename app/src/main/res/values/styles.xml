<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/mainColor</item> <!--状态栏颜色-->
        <item name="colorPrimary">@color/mainColor</item>  <!--ActionBar颜色-->
        <item name="android:textColorPrimary">@color/white</item> <!--ActionBar上的标题与更多菜单中的文字颜色-->
        <item name="colorControlNormal">@color/white</item>  <!--ActionBar控件颜色-->
        <item name="actionMenuTextColor">@color/blue</item>   <!--ActionBar menu item 文字大小和颜色-->
        <item name="actionMenuTextAppearance">@style/ActionBarMenu</item>
    </style>


    <style name="ActionBarMenu" parent="@android:style/TextAppearance.Holo.Large">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppThemePartTime" parent="Theme.AppCompat.Light">
        <item name="colorPrimaryDark">@color/mainColor</item> <!--状态栏颜色-->
        <item name="colorPrimary">@color/mainColor</item>  <!--ActionBar颜色-->
        <item name="android:textColorPrimary">@color/white</item> <!--ActionBar上的标题与更多菜单中的文字颜色-->
        <item name="colorControlNormal">@color/white</item>  <!--ActionBar控件颜色-->

    </style>

</resources>
